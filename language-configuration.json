{
    "comments": {
        // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
        "blockComment": [ "!", "!" ]
    },
    // symbols used as brackets
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        {"open": "{", "close": "}"},
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "\"", "close": "\""},
        {"open": "'", "close": "'"},
        {"open": "!", "close": "!"}
    ],
    
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        {"open": "{", "close": "}"},
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "\"", "close": "\""},
        {"open": "'", "close": "'"},
        {"open": "!", "close": "!"}
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*?(?:dowhile|if|process|prepass|else).*?$",
        "decreaseIndentPattern": "^\\s*?(?:enddo|endif|endproc|endpass|else).*?$"
    }
}
